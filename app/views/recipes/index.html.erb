<p id="notice"><%= notice %></p>

<h1>All Recipes</h1>
<div class= "d-flex flex-row flex-wrap p-2 align-content-start w-100 mw-100" >
  <% @recipes.each do |recipe| %>
    <% if recipe.published %>
      <div class= "col-xs-1 col-lg-2 col-md-3 col-sm-4 col-xs-5" >
        <%# Image to go here %>
        <div class= "card-title"><%= link_to recipe.title, recipe %></div>
        <div class= "card-text"><%= recipe.summary %></div>
        <% if can? :edit, recipe %>
          <%= link_to 'Edit', edit_recipe_path(recipe), class: 'btn btn-success' %>
        <% end %>
        <% if can? :destroy, recipe %>
          <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>


